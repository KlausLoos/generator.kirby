{
  "name": "edina",
  "config": {
    "remote": {
      "staging": {
        "host": "www.crispclean.be",
        "user": "crispcle",
        "path": "/home3/crispcle/public_html/projects/edina"
      },
      "production": {
        "host": "www.crispclean.be",
        "user": "",
        "path": ""
      }
    }
  },
  "scripts": {
    "key": "scp ~/.ssh/id_rsa.pub $npm_package_config_remote_production_user@$npm_package_config_remote_production_host:/customers/9/b/4/heppiekidzz.be/httpd.private/.ssh/authorized_keys",
    "clean": "echo '=> clean dist folder' && rm -rf dist",
    "copy": "echo '=> copy files 2 dist' && rsync -a --delete ./ dist --exclude /.gitignore --exclude /.gitmodules --exclude /.npmignore --exclude /bs-config.js --exclude /sftp-config.json --exclude /webpack.dev.js --exclude /webpack.prod.js --exclude /node_modules --exclude /dist --exclude /.git --exclude /postcss.config.js --exclude /assets/js/scripts.js",
    "imagemin": "echo '=> imagemin' && imagemin assets/images dist/assets/images -p",
    "php": "php -S 127.0.0.1:9062 >& /dev/null",
    "browser-sync": "browser-sync start --config bs-config.js",
    "sync:content": "echo '=> sync:content' && rsync -va --delete --progress --update $npm_package_config_remote_staging_user@$npm_package_config_remote_staging_host:$npm_package_config_remote_staging_path/content/ content",
    "sync:2staging": "rsync -va --delete --progress --update dist/ $npm_package_config_remote_staging_user@$npm_package_config_remote_staging_host:$npm_package_config_remote_staging_path/",
    "sync:2production": "rsync -va --delete --progress --update dist/ $npm_package_config_remote_production_user@$npm_package_config_remote_production_host:$npm_package_config_remote_production_path/",
    "build:css": "postcss assets/css/_main.css -o assets/css/style.css -w",
    "build:css:production": "postcss assets/css/_main.css -o dist/assets/css/style.css -e production",
    "webpack": "webpack --config webpack.dev.js -w",
    "webpack:production": "webpack --config webpack.prod.js",
    "serve": "npm-run-all -p php browser-sync webpack build:css",
    "start": "npm run serve -s",
    "build": "npm-run-all clean copy build:css:production webpack:production imagemin",
    "deploy:staging": "npm-run-all build sync:2staging",
    "deploy:production": "npm-run-all build sync:2production",
    "link-checker": "blc http://localhost:3000 -ro",
    "sitemap-generator": "node sitemap-generator.js"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "basscss": "^8.0.3",
    "browser-sync": "^2.18.13",
    "cssnano": "^3.10.0",
    "imagemin-cli": "^3.0.0",
    "npm-run-all": "^2.1.1",
    "postcss": "^6.0.14",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  }
}
