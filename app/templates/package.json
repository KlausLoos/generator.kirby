{
  "name": "otbs",
  "config": {
    "remote": {
      "staging": {
        "host": "www.crispclean.be",
        "user": "crispcle",
        "path": "/home3/crispcle/public_html/projects/otbs"
      },
      "production": {
        "host": "www.crispclean.be",
        "user": "wwwondersteuning",
        "path": "/home2/wwwondersteuning/public_html"
      }
    }
  },
  "scripts": {
    "key": "ssh $npm_package_config_remote_production_user@$npm_package_config_remote_production_host && mkdir -p /home3/$npm_package_config_remote_production_user/.ssh && scp ~/.ssh/id_rsa.pub $npm_package_config_remote_production_user@$npm_package_config_remote_production_host:/home3/$npm_package_config_remote_production_user/.ssh/authorized_keys",
    "clean": "echo '=> clean dist folder' && rm -f dist/{css/*,js/*,images/*}",
    "copy": "echo '=> copy files 2 dist' && rsync -a --delete app/ dist --exclude /assets/sass/ --exclude /.git --exclude /.sync-config.cson",
    "autoprefixer": "postcss -u autoprefixer -r app/assets/css/*",
    "scss": "node-sass app/assets/sass/main.scss app/assets/css/style.css --watch --silent",
    "minify:js": "echo '=> minify:js' && uglifyjs app/assets/js/vendor.bundle.js -o dist/assets/js/vendor.bundle.js -m -c && uglifyjs app/assets/js/app.bundle.js -o dist/assets/js/app.bundle.js  -m -c ",
    "minify:css": "echo '=> minify:css' && cleancss app/assets/css/app.bundle.css -o dist/assets/css/app.bundle.css",
    "imagemin": "echo '=> imagemin' && imagemin app/assets/images dist/assets/images -p",
    "php": "php -S 127.0.0.1:9061 -t app/ >& /dev/null",
    "browser-sync": "browser-sync start --config scripts/bs-config.js",
    "sync:content": "echo '=> sync:content' && rsync -va --delete --progress --update $npm_package_config_remote_staging_user@$npm_package_config_remote_staging_host:$npm_package_config_remote_staging_path/content/ app/content",
    "sync:2staging": "rsync -va --delete --progress --update dist/ $npm_package_config_remote_staging_user@$npm_package_config_remote_staging_host:$npm_package_config_remote_staging_path/",
    "sync:2production": "rsync -va --delete --progress --update dist/ $npm_package_config_remote_production_user@$npm_package_config_remote_production_host:$npm_package_config_remote_production_path/",
    "build:css": "npm run scss && npm run autoprefixer",
    "watch:js": "onchange 'app/assets/js' -- npm run webpack",
    "webpack": "webpack --config scripts/webpack.config.js",
    "serve": "npm-run-all -p php browser-sync build:css webpack",
    "start": "npm run serve -s",
    "build": "npm-run-all clean copy minify:css minify:js imagemin",
    "deploy:staging": "npm-run-all build sync:2staging",
    "deploy:production": "npm-run-all build sync:2production",
    "link-checker": "blc http://localhost:3002 -ro",
    "sitemap-generator": "node scripts/sitemap-generator.js"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "bootstrap": "^4.0.0-alpha.2",
    "broken-link-checker": "^0.7.1",
    "browser-sync": "^2.12.8",
    "clean-css": "^3.4.18",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "font-awesome": "~4.4.0",
    "fs": "0.0.2",
    "html-webpack-plugin": "^2.21.0",
    "http-proxy": "^1.14.0",
    "imagemin-cli": "^2.1.0",
    "jquery": "^2.2.4",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "sitemap-generator": "^4.0.0",
    "sizzle": "^2.3.0",
    "style-loader": "^0.13.1",
    "svg-sprite-generator": "0.0.7",
    "tether": "^1.3.2",
    "timers": "^0.1.1",
    "uglify-js": "^2.6.2",
    "webpack": "^1.13.1",
    "write": "^0.3.1",
    "axios": "^0.12.0",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "jsdom": "^9.4.0",
    "classnames": "^2.2.5",
    "immutable": "^3.8.1",
    "react": "^15.2.0",
    "react-addons-pure-render-mixin": "^15.2.0",
    "react-dom": "^15.2.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2"
  }
}
